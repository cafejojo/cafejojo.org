{
    "name": "cafejojo.org",
    "description": "Website for the Café Jojo team",
    "version": "0.0.1",
    "author": "Café Jojo <info@cafejojo.org>",
    "dependencies": {
        "autoprefixer": "^8.5.1",
        "concurrently": "^3.5.1",
        "gatsby": "^1.9.241",
        "gatsby-link": "^1.6.39",
        "gatsby-plugin-react-helmet": "^2.0.8",
        "husky": "^0.14.3",
        "lint-staged": "^7.1.2",
        "postcss": "^6.0.22",
        "postcss-cli": "^5.0.0",
        "postcss-cssnext": "^3.1.0",
        "postcss-loader": "^2.1.5",
        "prettier": "^1.11.1",
        "purgecss": "^1.0.0",
        "react-helmet": "^5.2.0",
        "tailwindcss": "^0.5.3"
    },
    "keywords": [
        "gatsby",
        "tailwind",
        "tailwindcss",
        "purgecss"
    ],
    "license": "MIT",
    "scripts": {
        "watch:styles": "postcss src/layouts/index.css -o src/layouts/index.tailwind.css -w",
        "build:postcss": "postcss src/layouts/index.css -o src/layouts/index.tailwind.css",
        "build:purgecss": "purgecss --css ./src/layouts/index.tailwind.css --con public/index.html src/**/*.js -o ./src/layouts",
        "build:styles": "npm run build:postcss && npm run build:purgecss",
        "develop": "npm run build:postcss && concurrently --kill-others \"gatsby develop\" \"npm run watch:styles\"",
        "build": "npm run build:styles && gatsby build",
        "format": "prettier --write src/**/*.js",
        "precommit": "lint-staged",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
